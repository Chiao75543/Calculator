<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:layout_centerInParent="true"
    android:alignmentMode="alignMargins"
    android:useDefaultMargins="true"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:rowCount="7" >

    <EditText
        android:id="@+id/res"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:background="#dddddd"
        android:textSize="50sp"
        android:maxLength="13" />

    <Button
        android:id="@+id/clear"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="清空" />

    <Button
        android:id="@+id/equal"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="=" />

    <Button
        android:id="@+id/btn1"
        android:text="1" />

    <Button
        android:id="@+id/btn2"
        android:text="2" />

    <Button
        android:id="@+id/btn3"
        android:text="3" />

    <Button
        android:id="@+id/add"
        android:text="+" />

    <Button
        android:id="@+id/btn4"
        android:text="4" />

    <Button
        android:id="@+id/btn5"
        android:text="5" />

    <Button
        android:id="@+id/btn6"
        android:text="6" />

    <Button
        android:id="@+id/sub"
        android:text="-" />

    <Button
        android:id="@+id/btn7"
        android:text="7" />

    <Button
        android:id="@+id/btn8"
        android:text="8" />

    <Button
        android:id="@+id/btn9"
        android:text="9" />

    <Button
        android:id="@+id/mul"
        android:text="*" />

    <Button
        android:id="@+id/btn0"
        android:text="0" />

    <Button
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:text="." />
    <Button
        android:id="@+id/fac"
        android:text="!" />

    <Button
        android:id="@+id/div"
        android:text="/" />
    <TextView
        android:gravity="center"
        android:id="@+id/NameText"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="30sp"/>

</GridLayout>